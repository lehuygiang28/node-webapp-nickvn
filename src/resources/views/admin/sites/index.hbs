<script> document.title = `Dashboard - ${document.title}`; </script>

<!-- Sales Chart Start -->
<div class='container-fluid pt-4 px-4'>
    <div class='row g-4'>

        <!-- Sale & Revenue Start -->
        <div class='col-sm-12 col-xl-3'>
            <div class='bg-secondary rounded d-flex align-items-center justify-content-between p-4 mb-4'>
                <i class='fa fa-chart-line fa-3x text-primary'></i>
                <div class='ms-3'>
                    <p class='mb-2'>Today Sale</p>
                    <h6 class='mb-0 float-end'>{{vndCurrency todaySale}}</h6>
                </div>
            </div>
            <div class='bg-secondary rounded d-flex align-items-center justify-content-between p-4 mb-4'>
                <i class='fa fa-chart-bar fa-3x text-primary'></i>
                <div class='ms-3'>
                    <p class='mb-2'>Total Sale</p>
                    <h6 class='mb-0 float-end'>{{vndCurrency totalSale}}</h6>
                </div>
            </div>
        </div>
        <!-- Sale & Revenue End -->


        <div class='col-sm-12 col-xl-9'>
            <div class='bg-secondary text-center rounded p-4'>
                <div class='d-flex align-items-center justify-content-between mb-4'>
                    <h6 class='mb-0'>Sales</h6>
                </div>
                <canvas id='sales-revenue'></canvas>
            </div>
        </div>
    </div>
</div>

<script>
        // Salse & Revenue Chart
       var ctx2 = $("#sales-revenue").get(0).getContext("2d");
       var myChart2 = new Chart(ctx2, {
         type: "line",
         data: {
           labels: {{{dataChart.stringTime}}},
           datasets: [{
               label: "Salse",
               data: {{{dataChart.stringPrice}}},
               backgroundColor: "rgba(235, 22, 22, .7)",
               fill: true
             }
           ]
         },
       options: {
           responsive: true
         }
     });
</script>
<!-- Sales Chart End -->

