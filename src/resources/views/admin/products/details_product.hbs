<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-8">
            <div class="bg-secondary rounded p-4">

                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path
                            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </symbol>
                    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path
                            d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                    </symbol>
                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path
                            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </symbol>
                </svg>

                {{#if sessionFlash.success}}
                <div class="alert alert-success d-flex align-items-center" id="alert_success" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
                        <use xlink:href="#check-circle-fill" />
                        <div>{{sessionFlash.success}}</div>
                    </svg>
                </div>
                {{else if sessionFlash.error}}
                <div class="alert alert-danger d-flex align-items-center" id="alert_error" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" />
                        <div>{{sessionFlash.error}}</div>
                    </svg>
                </div>
                {{else if success}}
                <div class="alert alert-success d-flex align-items-center" id="alert_success" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
                        <use xlink:href="#check-circle-fill" />
                        <div>{{success}}</div>
                    </svg>
                </div>
                {{else if error}}
                <div class="alert alert-danger d-flex align-items-center" id="alert_error" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" />
                        <div>{{error}}</div>
                    </svg>
                </div>
                {{/if}}

                <h6 class="mb-4">{{product.game.name}} - #{{product.product_id}}</h6>
                <dl class="row mb-0" id="content-editable">

                    <dt class="col-sm-4">Id</dt>
                    <dd class="col-sm-8" id="_id_category" disable-editable>
                        {{product._id}}
                    </dd>

                    <dt class="col-sm-4">Game Name</dt>
                    <dd class="col-sm-8" id="_gameName">{{product.game.name}}<i class="fas fa-edit float-end"></i>
                    </dd>

                    <dt class="col-sm-4 text-capitalize">price</dt>
                    <dd class="col-sm-8" id="_price">{{product.price}}<i class="fas fa-edit float-end"></i></dd>

                    <dt class="col-sm-4 text-capitalize">champ</dt>
                    <dd class="col-sm-8" id="_champ">{{product.champ}}<i class="fas fa-edit float-end"></i></dd>

                    <dt class="col-sm-4 text-capitalize">skin</dt>
                    <dd class="col-sm-8" id="_skin">{{product.skin}}<i class="fas fa-edit float-end"></i></dd>

                    <dt class="col-sm-4 text-capitalize">visible</dt>
                    <do class="col-sm-8 text-capitalize mb-1" id="_visible">{{product.visible}}<i
                            class="fas fa-edit float-end"></i></do>

                    <dt class="col-sm-4 text-capitalize">status</dt>
                    <dd class="col-sm-8 text-capitalize" disable-editable>{{product.status.name_en}}</dd>

                    <dt class="col-sm-4 text-capitalize">created at</dt>
                    <dd class="col-sm-8 text-capitalize" disable-editable>{{dateFormat
                        product.created_at 'hh:mm:ss DD/MM/YYYY'}}</dd>

                    <dt class="col-sm-4 text-capitalize">updated at</dt>
                    <dd class="col-sm-8 text-capitalize" disable-editable>{{dateFormat
                        product.updated_at 'hh:mm:ss DD/MM/YYYY'}}</dd>

                    <div class="d-flex justify-content-center">

                        <button type="submit" class="btn btn-success m-2"
                            onclick="submitSaveChanges('{{product._id}}');showSpinner();">Save</button>
                        {{!-- <a href="/admin/categories" class="btn btn-outline-light m-2">Edit</a> --}}

                        <!-- Button trigger modal -->
                        <a type="button" class="btn btn-outline-danger m-2" data-bs-toggle="modal"
                            data-bs-target="#DeleteCategoryPopup">
                            Delete
                        </a>
                        <!-- Modal -->
                        <div class="modal fade" id="DeleteCategoryPopup" tabindex="-1"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-secondary" id="exampleModalLabel">Confirmation to
                                            delete?</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure to delete this Category?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button class="btn btn-danger text-white" data-bs-dismiss="modal">Delete
                                            Category</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal End -->

                    </div>
                </dl>
            </div>
        </div>

        <div class="col-sm-12 col-xl-4">
            <div class="bg-secondary rounded p-4">
                <div class='mb-3'>
                    <label for='gallery-photo-add' class='form-label mt-4'>Change new image</label>
                    <input class='form-control bg-dark' type='file' accept='image/*' name='img' id='image-gallery-add'
                        required multiple />
                    <div class='gallery row pt-2'></div>
                </div>

                <dt class="col-sm-4">Image</dt>
                <di class="col-sm-8">
                    {{#each product.imgur as |image|}}
                    <div class="mb-2">
                        <a href="{{image.link}}" data-lightbox="image-product" data-title="Product Image"
                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="See more"><img
                                src="{{image.link}}" alt="Image product" class="image" class="w-100"
                                style="border:solid 1px red"></a>
                    </div>
                    {{/each}}
                </di>

            </div>
        </div>

    </div>
</div>