<script> document.title = `User Managaments - ${document.title}`; </script>


<div class="container-fluid pt-4 px-4">

    <div class="row g-4 justify-content-md-center">

        <div class="col-sm-12 col-xl-8">
            <div class="bg-secondary rounded h-100 p-4">

                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path
                            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </symbol>
                    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path
                            d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                    </symbol>
                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path
                            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </symbol>
                </svg>

                {{#if sessionFlash.success}}
                <div class="alert alert-success d-flex align-items-center" id="alert_success" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
                        <use xlink:href="#check-circle-fill" />
                        <div>{{sessionFlash.success}}</div>
                    </svg>
                </div>
                {{else if sessionFlash.error}}
                <div class="alert alert-danger d-flex align-items-center" id="alert_error" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" />
                        <div>{{sessionFlash.error}}</div>
                    </svg>
                </div>
                {{else if success}}
                <div class="alert alert-success d-flex align-items-center" id="alert_success" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
                        <use xlink:href="#check-circle-fill" />
                        <div>{{success}}</div>
                    </svg>
                </div>
                {{else if error}}
                <div class="alert alert-danger d-flex align-items-center" id="alert_error" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" />
                        <div>{{error}}</div>
                    </svg>
                </div>
                {{/if}}

                <h6 class="mb-4 text-capitalize">{{user.userName}}</h6>
                <dl class="row mb-0">

                    <dt class="col-sm-4 text-capitalize">Id</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{user._id}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">User Name</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{user.userName}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">email</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{user.email}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">phone</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{user.phone}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">money</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{vndCurrency user.money}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">role</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{user.role.role_name_en}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">status</dt>
                    <dd class="col-sm-8 text-uppercase" disable-editable>
                        {{user.status}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">note</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{user.note}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">created at</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{dateFormat user.createdAt 'hh:mm:ss - DD/MM/YYYY'}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">updated at</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{dateFormat user.updatedAt 'hh:mm:ss - DD/MM/YYYY'}}
                    </dd>

                    <dt class="col-sm-4 text-capitalize">last login</dt>
                    <dd class="col-sm-8" disable-editable>
                        {{dateFormat user.lastLogin 'hh:mm:ss - DD/MM/YYYY'}}
                    </dd>

                    <div class="d-flex justify-content-center">
                        {{!-- showSpinner() --}}

                        <!-- Button trigger modal -->
                        <a type="button" class="btn btn-outline-danger m-2" data-bs-toggle="modal"
                            data-bs-target="#BanButton">
                            BAN
                        </a>
                        <a type="button" class="btn btn-success m-2" data-bs-toggle="modal"
                            data-bs-target="#UnbanButton">
                            ACTIVE
                        </a>
                        <a type="button" class="btn btn-success m-2 text-capitalize" data-bs-toggle="modal"
                            data-bs-target="#moneyModal">
                            <i class="fa fa-plus"></i> | money
                        </a>

                        <!-- Modal -->
                        <div class="modal fade" id="BanButton" tabindex="-1" aria-labelledby="modalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-secondary" id="modalLabel">Confirmation to
                                            ban?</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure to ban this User?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button class="btn btn-danger text-white text-capitalize"
                                            data-bs-dismiss="modal"
                                            onclick="banOrActive('{{user.userName}}', 'ban')">ban</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade" id="UnbanButton" tabindex="-1" aria-labelledby="modalLabel1"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-secondary" id="modalLabel1">Confirmation to
                                            active?</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure to active this User?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button class="btn btn-success text-white text-capitalize"
                                            data-bs-dismiss="modal"
                                            onclick="banOrActive('{{user.userName}}', 'active');showSpinner();">active</button>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="modal fade" id="moneyModal" tabindex="-1" aria-labelledby="moneyModalLabel"
                            aria-hidden="true">
                            <form action="/admin/users/{{user.userName}}/money" method="post">
                                <div class="modal-dialog">
                                    <div class="modal-content" style="background-color: #191C24;">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-white" id="moneyModalLabel">Change user's money
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Input your money to update:
                                            <div class='form-floating mb-3'>
                                                <input type='number' class='form-control' id="money" name='money' />
                                                <label for='money'>Money</label>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button class="btn btn-success text-white text-capitalize" type="submit"
                                                onclick="showSpinner();">Change</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- Modal End -->

                    </div>
                </dl>

            </div>
        </div>

    </div>
</div>