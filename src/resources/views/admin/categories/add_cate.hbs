<div class='container-fluid pt-4 px-4'>
    <form method='POST' action='/admin/categories/add' enctype='multipart/form-data'>
        <div class='row g-4'>

            {{! <div class='col-sm-12 col-xl-6'> }}
                <div class='col-sm-12 col-xl-5'>
                    <div class='bg-secondary rounded h-100 p-4'>

                        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                            <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                                <path
                                    d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                            </symbol>
                            <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                                <path
                                    d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                            </symbol>
                            <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                                <path
                                    d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                            </symbol>
                        </svg>

                        {{#if sessionFlash.success}}
                        <div class="alert alert-success d-flex align-items-center" id="alert_success" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
                                <use xlink:href="#check-circle-fill" />
                                <div>{{sessionFlash.success}}</div>
                            </svg>
                        </div>
                        {{else if sessionFlash.error}}
                        <div class="alert alert-danger d-flex align-items-center" id="alert_error" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                                <use xlink:href="#exclamation-triangle-fill" />
                                <div>{{sessionFlash.error}}</div>
                            </svg>
                        </div>
                        {{else if success}}
                        <div class="alert alert-success d-flex align-items-center" id="alert_success" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
                                <use xlink:href="#check-circle-fill" />
                                <div>{{success}}</div>
                            </svg>
                        </div>
                        {{else if error}}
                        <div class="alert alert-danger d-flex align-items-center" id="alert_error" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                                <use xlink:href="#exclamation-triangle-fill" />
                                <div>{{error}}</div>
                            </svg>
                        </div>
                        {{/if}}

                        <h6 class='mb-4'>Add Category</h6>

                        {{! <div class="btn btn-outline-info mb-3"><i class="fas fa-plus"></i> New Category</div> }}

                        <div class='form-floating mb-3'>
                            <input type='text' class='form-control' id='cate-name' name='category_name' required />
                            <label for='cate-name'>Name</label>
                        </div>
                        <div class='form-floating mb-3'>
                            <input type='text' class='form-control' id='cate-slug' name='slug' required />
                            <label for='cate-slug'>Slug</label>
                        </div>

                        <div class='form-floating mb-3'>
                            <select class='form-select text-capitalize' id='floatingSelectStatus'
                                aria-label='Select visibility status' name='visible' required>
                                <option selected>Select visible</option>
                                {{#each visibleCase}}
                                <option value='{{this}}'>{{this}}</option>
                                {{/each}}

                            </select>
                            <label for='floatingSelectStatus'>Select visible</label>
                        </div>

                        <div class='mb-3'>
                            <label for='gallery-photo-add' class='form-label'>Multiple image input</label>
                            <input class='form-control bg-dark' type='file' accept='image/*' name='img'
                                id='gallery-photo-add' required />
                            <div class='gallery row pt-2'></div>
                        </div>
                        <button type='submit' class='btn btn-success' onclick="showSpinner()">Save</button>
                    </div>

                </div>

                {{! <div class='col-sm-12 col-xl-8'>
                    <div class='bg-secondary rounded h-100 p-4'>
                    </div>
                </div> }}

            </div>
    </form>
</div>